// ====================================

model FleaMarket {
  flea_market_id          BigInt              @id @default(autoincrement())
  flea_market_name        String              @db.VarChar(200)
  flea_market_place       String              @db.VarChar(200)
  flea_market_url         String?             @db.VarChar(500)
  flea_market_image_url   String?             @db.VarChar(500)
  flea_market_title       String?             @db.VarChar(500)
  flea_market_latitude    Decimal?            @db.Decimal(10, 8)
  flea_market_longitude   Decimal?            @db.Decimal(11, 8)
  flea_market_created_at  DateTime            @default(now())
  flea_market_updated_at  DateTime            @default(now()) @updatedAt

  sessions                FleaMarketSession[]

  @@index([flea_market_name])
  @@index([flea_market_place])
  @@index([flea_market_latitude, flea_market_longitude])
  @@map("flea_market")
}

model FleaMarketSession {
  flea_market_session_id         BigInt      @id @default(autoincrement())
  flea_market_id                 BigInt
  flea_market_session_start_date String      @db.VarChar(10)
  flea_market_session_end_date   String      @db.VarChar(10)
  flea_market_session_start_time String?     @db.VarChar(5)
  flea_market_session_end_time   String?     @db.VarChar(5)
  flea_market_session_notes      String?
  flea_market_session_created_at DateTime    @default(now())

  flea_market                    FleaMarket  @relation(fields: [flea_market_id], references: [flea_market_id], onDelete: Cascade)

  @@index([flea_market_id])
  @@index([flea_market_session_start_date])
  @@index([flea_market_session_end_date])
  @@index([flea_market_id, flea_market_session_start_date, flea_market_session_end_date])
  @@map("flea_market_session")
}

